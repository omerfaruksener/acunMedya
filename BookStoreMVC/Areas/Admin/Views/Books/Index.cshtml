@model IEnumerable<BookStoreAPI.Models.Book>
@{ Layout = "~/Views/Shared/_Layout.cshtml"; }
<h2>Kitaplar (Admin)</h2>
<a class="btn btn-primary mb-3" href="/Admin/Books/Create">Yeni Kitap Ekle</a>
<table class="table">
<thead><tr><th>Resim</th><th>Başlık</th><th>Kategori</th><th>Fiyat</th><th>İşlemler</th></tr></thead>
<tbody>
@foreach(var b in Model) {
<tr>
    <td><img src="@b.ImageUrl" style="height:60px;object-fit:cover;" /></td>
    <td>@b.Title</td>
    <td>@b.Category?.Name</td>
    <td>@b.Price.ToString("C")</td>
    <td>
        <a class="btn btn-sm btn-secondary" href="/Admin/Books/Edit/@b.Id">Düzenle</a>
        <form method="post" action="/Admin/Books/Delete/@b.Id" style="display:inline">
            <button class="btn btn-sm btn-danger">Sil</button>
        </form>
    </td>
</tr>
}
</tbody>
</table>
