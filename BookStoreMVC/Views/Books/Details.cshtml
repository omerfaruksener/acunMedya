@model BookStoreMVC.Models.BookDto
@{
    ViewData["Title"] = "Kitap Detay";
    Layout = "_Layout";
}
<h2>@Model.Title</h2>
<div class="row">
    <div class="col-md-4">
        <img src="@Model.ImageUrl" class="img-fluid" />
    </div>
    <div class="col-md-8">
        <p>Kategori: @Model.Category?.Name</p>
        <p>Fiyat: @Model.Price.ToString("C")</p>
        <p><strong>Son görüntülenen:</strong> @TempData["LastViewed"]</p>
    </div>
</div>
